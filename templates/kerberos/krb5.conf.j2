[logging]
 default = FILE:/var/log/krb5libs.log
 kdc = FILE:/var/log/krb5kdc.log
 admin_server = FILE:/var/log/kadmind.log

[libdefaults]
 dns_lookup_realm = true
 ticket_lifetime = 24h
 renew_lifetime = 7d
 forwardable = true
 rdns = false
 default_realm = {{ ocp_cluster_config_krb5_realm | upper }} 
 default_ccache_name = KEYRING:persistent:%{uid}
 default_client_keytab_name = /krb5/client.keytab

[realms]
{{ ocp_cluster_config_krb5_realm | upper }} = {
}

[domain_realm]
.{{ ocp_cluster_config_krb5_realm | lower }} = {{ ocp_cluster_config_krb5_realm | upper }} 
{{ ocp_cluster_config_krb5_realm | lower }} = {{ ocp_cluster_config_krb5_realm | upper }} 
